<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_white"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:id="@+id/bimbinganTopikText"
        style="@style/TextAppearance.MaterialComponents.Headline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Topik Bahasan"
        android:textColor="@color/colorPrimary"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bimbinganDosenText"
        style="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Nama Dosen"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="@+id/bimbinganTopikText"
        app:layout_constraintTop_toBottomOf="@id/bimbinganTopikText" />

    <TextView
        android:id="@+id/bimbinganWaktuText"
        style="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Waktu"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="@+id/bimbinganTopikText"
        app:layout_constraintTop_toBottomOf="@+id/bimbinganDosenText" />

    <TextView
        android:id="@+id/bimbinganTanggalText"
        style="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Tanggal"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bimbinganWaktuText" />


</androidx.constraintlayout.widget.ConstraintLayout>